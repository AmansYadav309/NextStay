<% layout('/layouts/boilerplate.ejs') -%> 
    
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;

    }

    .filter{
        text-align: center;
        margin-left: 2.5rem;
        margin-top: 1.5rem;
        opacity: 0.7;
    }
   
    .tax-toggle{
        border: 1px solid rgb(152, 152, 152);
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem ;
        margin: 1rem ;
        margin-left: 5rem;
        display: flex;
        align-items: center;
        
    }

   
     .GSt{
        display: none;
     }
</style>
<div class="container">
    <div id="filters">
        <div class="filter">
            <div class="filter_icon">
               <i class="fa-solid fa-house"></i>
            </div>
            <p>Stay </p>
        </div>
        <div class="filter">
            <div class="filter_icon">
               <i class="fa-solid fa-fire"></i>
            </div>
            <p>Trending</p>
        </div>
         <div class="filter">
            <div class="filter_icon">
               <i class="fa-solid fa-bed"></i>
            </div>
            <p>Rooms</p>
        </div>
         <div class="filter">
            <div class="filter_icon">
              <i class="fa-solid fa-city"></i>
            </div>
            <p>Cities</p>
        </div>
         <div class="filter">
            <div class="filter_icon">
          <i class="fa-solid fa-mountain-sun"></i>
            </div>
            <p>Moutains</p>
        </div>
         <div class="filter">
            <div class="filter_icon">
         <i class="fa-brands fa-fort-awesome"></i>
            </div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div class="filter_icon">
          <i class="fa-solid fa-person-swimming"></i>
            </div>
            <p>Pooles</p>
        </div>
            <div class="filter">
            <div class="filter_icon">
          <i class="fa-solid fa-tents"></i>
            </div>
            <p>Camping</p>
        </div>
         <div class="filter">
            <div class="filter_icon">
         <i class="fa-solid fa-tractor"></i>
            </div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div class="filter_icon">
          <i class="fa-solid fa-igloo"></i>
            </div>
            <p>Arctic</p>
        </div>



        <div class = "tax-toggle  mt-4">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display with Taxes</label>
            </div>
        </div>
    </div>

    
        <div class="row  row-cols-lg-4  row-cols-md-3  row-cols-sm-3  mt-3">
            <% for(let listing of alllist) { %>
                <a href="/listings/<%= listing._id %>" class="card-a-link">
                <div class="card  listing-card">
                    <img src="<%= listing.image[0]?.url %>" class="card-img-top" alt="listing image" style="height: 20rem">
                   <div class="card-img-overlay"> <p><i class="fa-regular fa-heart"></i></p></div>
                    <div class="card-body">
                        
                            <p class="card-text">
                                <b></b> <%= listing.title %> </b> <br>
                                <i class="fa-solid fa-rupee-sign"></i>
                             <%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %>/Night 
                           <i class="GSt"> &nbsp; &nbsp; +18%GST</i>
                            </p>
                        
                    
                    </div>
                </div>
                </a>
                <% } %>
        </div>
       
        </div>
<script>
    const texSwitch = document.getElementById("switchCheckDefault");
    texSwitch.addEventListener("click", () => {
        let tax_info = document.getElementsByClassName(" GSt");
        for (info of tax_info) {
            if (info.style.display != "inline") {
                info.style.display = "inline";
            }
            else {
                info.style.display = "none";
            }
        }
    });
</script>